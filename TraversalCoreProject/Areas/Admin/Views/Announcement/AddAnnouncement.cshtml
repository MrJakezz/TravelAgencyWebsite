@model AnnouncementAddDTO
@{
    ViewData["Title"] = "AddAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Duyuru Ekle</h1>

<form method="post">
    <label>Duyuru Başlığı</label>
    <input type="text" asp-for="AnnouncementTitle" class="form-control"> <!-- asp-for için gelen proplar, DTO katmanından gelmekte.-->
    <span asp-validation-for="AnnouncementTitle" class="text-danger"></span>
    <br>
    <label>İçerik</label>
    <input type="text" asp-for="AnnouncementContent" class="form-control"> <!-- asp-for için gelen proplar, DTO katmanından gelmekte.-->
    <span asp-validation-for="AnnouncementContent" class="text-danger"></span>
    <br><br>
    <button class="btn btn-success">Oluştur</button>
</form>