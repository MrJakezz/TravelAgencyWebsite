@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    //
    int timer = 0;
}

<h1>Misafirler</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>İsim - Soyisim</th>
        <th>Kullanıcı Adı</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Düzenle</th>
        <th>Yorumlar</th>
        <th>Tur Geçmişi</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @{timer += 1;}
            <td>@timer</td>
            <td>@item.Name @item.Surname</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td><a href="/Admin/User/DeleteUser/@item.Id" class="btn btn-outline-danger" style="display: block; width: 100%; text-align: center;">Sil</a></td>
            <td><a href="/Admin/User/EditUser/@item.Id" class="btn btn-outline-info" style="display: block; width: 100%; text-align: center;">Düzenle</a></td>
            <td><a href="/Admin/User/UserComments/@item.Id" class="btn btn-outline-primary" style="display: block; width: 100%; text-align: center;">Yorumlar</a></td>
            <td><a href="/Admin/User/UserPreviousReservations/@item.Id" class="btn btn-outline-secondary" style="display: block; width: 100%; text-align: center;">Tur Geçmişi</a></td>
        </tr>
    }
</table>