    <label>Süre</label>
    <input type="text" asp-for="DestinationDayNight" class="form-control" />
    <br />
    <label>Fiyat</label>
    <input type="text" asp-for="DestinationPrice" class="form-control" />
    <br />
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>